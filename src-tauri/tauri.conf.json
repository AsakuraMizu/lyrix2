      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "zh-CN"
        }
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "all": true,
      "http": {
        "scope": ["http://*.kugou.com/*", "http://music.163.com/api/*"]
      }
    },
    "windows": [
      {
        "title": "LyriX2",
